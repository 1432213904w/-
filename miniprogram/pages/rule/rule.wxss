.page-about{
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
}
.page-about .title{
    height: 50px;
    line-height: 50px;
    vertical-align: middle;
    background-color: #fff;
    padding-left: 10px;
}
.page-about .content{
    background-color: #fff;
    border-top: 1px solid #f0f0f0;
    padding-top: 10px;
    padding-left: 10px;
    width: 97%;
}
.page-about .content .sortnum{
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 1px solid #00b2f4;
    background-color: #00b2f4;
    border-radius: 50%;
    color: #fff;
    text-align: center;
    margin-right: 5px;

}
/* 外层组件的宽度可设置成100%或具体数值 */
.adContainer {
    width: 100%;
    margin-top: 10px;
    padding-bottom: 10px;
}