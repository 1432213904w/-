.page-wrapper{
    text-align: center;
  }
  .page-wrapper .paycode{
    width: 320px;
    height: 320px;
  }
  .page-wrapper button{
    width: 90%;
  }
  /* 外层组件的宽度可设置成100%或具体数值 */
  .page-wrapper .adContainer {
    margin-top: 5px;
    width: 100%;
    margin-bottom: 20px;
  }
  .title{
    height: 45px;
    line-height: 45px;
    vertical-align: middle;
  }
  .category{
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;

    padding: 10px 0;
    border: 1px solid #f0f0f0;
    margin-bottom: 10px;
  }
  .category .code{
    width: 45px;
    height: 45px;
    line-height: 45px;
    vertical-align: middle;
    text-align: center;
    background-color: #dfc14d;
    border-radius: 50%;

  }
  .imgList-li{
    padding: 30px 0;
    background-color: #dfc14d;
  }